<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Status</title>
    <% include partials/scripts.ejs %>
</head>
<% include partials/navbar.ejs %>
    <body onload="getComplaint()">
        <p id="uid" style="display : none;"><%= id %></p>
        <p id="user" style="display : none;"> <%= usertype %></p>

        <div class="contain">
            <ul class="progressbar">
                <li id="registered">Registered</li>
                <span></span>
                <li id="under-consideration">Under Consideration</li>
                <span></span>
                <li id="replied">Replied</li>
            </ul>
        </div>
        <div class="container">
            <div class="">
                <table id="table-custom" class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="">
                            <th colspan="2">Complaint</th>
                        </tr>
                    </thead>
                    <tbody id="ctable">
                    </tbody>
                </table>
            </div>
            <div id="action_div" class="d-none">
                <div class="form-group">
                    <label class="control-label" for="c_new_status">Mark as :&nbsp;&nbsp;</label>
                    <select name="status" class="form-control" id="c_new_status">
                        <option class="option-select" selected disabled>Select Option</option>
                        <option class="option-select" value="Under Consideration">Under Consideration</option>
                        <option class="option-select" value="Replied">Replied</option>
                    </select>
                </div>
                <div id="c_remarks_div" class="form-group">
                    <label class="control-label" for="c_remarks">Comments :&nbsp;&nbsp;</label>
                    <textarea name="remarks" id="c_remarks" class="form-control"></textarea>
                </div>
                <div class="text-center">
                    <button id="save-btn" onclick="changeStatus()" class="btn btn-success text-light btn-rounded">Save</button>
                </div>
            </div>
        </div>
    </body>
</html>