        <p id="uid" style="display : none;"><%= id %></p>
        <p id="user" style="display : none;"><%= usertype %></p>
        <div id="status_steps_div" class="container my-5">
            <div class="row" style="border-bottom:0;">
                <div class="col-xs-3 complete status-box">
                    <div class="text-center"><button type="button" id="registered" class="btn btn-secondary disabled">Registered</button></div>    
                    <a href="javascript:()" class=""></a>
                </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
                </div>
                <div class="col-xs-3 status-box">
                    <div class="text-center"><button type="button" id="underConsideration" class="btn btn-secondary disabled">Under Consideration</button></div>    
                    <a href="javascript:()" class=""></a>
                </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
                </div>
                <div class="col-xs-3 status-box">
                    <div class="text-center"><button type="button" id="replied" class="btn btn-secondary disabled">Replied</button></div>
                    <a href="javascript:()" class=""></a>
                </div>
            </div>
        </div>
        <table id="ctable"></table>
        <div id="action_div" class="row d-none"> 
                        <div class="form-group">
                            <label class="control-label" for="c_new_status">Mark as :&nbsp;&nbsp;</label>
                            <select name="status" class="form-control" id="c_new_status">
                                <option selected disabled>Select Option</option>
                                <option value="Under Consideration">Under Consideration</option>
                                <option value="Replied">Replied</option>
                            </select>
                        </div>
                        <div id="c_remarks_div" class="d-none form-group mx-sm-3">
                            <label class="control-label" for="c_remarks">Comments :&nbsp;&nbsp;</label>
                            <textarea name="remarks" class="feditor" id="c_remarks" class="form-control"></textarea>
                        </div>
                        <button onclick="changeStatus()" class="btn btn-success text-light btn-rounded px-4">Save</button>
        </div>
    </body>
</html>